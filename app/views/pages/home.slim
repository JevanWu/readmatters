/= render "shared/jumbotron", content: @title || "让有故事的书籍拥有更多故事"
.jumbotron
  .slogan
    - if current_user.present?
      h1
        = "让有故事的书籍拥有更多故事"
    - else
      h1
        = "现在开始发布你的书籍"
      .publish-action#publish-book
        = link_to t(:publish_book), book_name_products_path, class: "btn btn-default emphasis-btn"
.grey-division
  .container
    #container
      - @products.each do |product|
        .item
          .cover
            = link_to image_tag(product.cover_url), product_path(product)
            - if current_user.present? && current_user.current_location == product.user.current_location
              .city.tag
                = "同城"
            /*.user-avatar*/
            /*  = image_tag product.user.avatar.url(:thumb)*/

          .title
            = link_to product.name, product_path(product)
          .price
            = number_to_currency(product.price, unit: "")
            span.warning-text style="text-decoration: line-through; margin-left: 5px;"
              = number_to_currency(product.book.price, unit: "")

- content_for :page_css
  = stylesheet_link_tag "pages/home"
  = stylesheet_link_tag "pages/masonry-boxes"
