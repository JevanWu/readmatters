      .col-md-3
        .image-box
          = image_tag "https://z2.muscache.com/ac/pictures/86187719/e309c267_original.jpg?interpolation=lanczos-none&size=small&output-format=jpg&output-quality=70"
      .col-md-3
        .image-box
          = image_tag "http://t12.baidu.com/it/u=4095575894,102452705&fm=32&s=A98AA55F526172A6F6A058E50300A060&w=623&h=799&img.JPEG"
      .col-md-3
        .image-box
          = image_tag "hor.JPG"
      .col-md-3
        .image-box
          = image_tag "ver.PNG"
      .col-md-3
        .image-box
          = image_tag "http://t12.baidu.com/it/u=4095575894,102452705&fm=32&s=A98AA55F526172A6F6A058E50300A060&w=623&h=799&img.JPEG"
      .col-md-3
        .add-box
          = fa_icon("plus")
          p
            | 添加新照片
          /.cover
